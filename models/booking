const mongoose = require('mongoose')

const bookingSchema = new mongoose.Schema({
    bookedby:{
        type:String,
        required:true
    },
    bookedfor:{
        type:String,
        required: true
    },
    bookingdate:{
        type:Date,
        required:true
    },
    description:{
        type:String,
    },
    
    CreatedAt:{
        type:Date,
        required:true,
        default: Date.now
    },

    status:{
        type: string
    }
})

module.exports = mongoose.model('Bookings',bookingSchema)